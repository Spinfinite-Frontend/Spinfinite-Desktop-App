{
  "name": "spinfinite",
  "version": "1.2.1",
  "description": "Official Spinfinite Windows App",
  "author": "Spinfinite Ltd",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "arch -x86_64 npx dotenv electron-builder --win --x64 --ia32 --publish always"
  },
  "build": {
    "appId": "com.spinfinite",
    "productName": "Spinfinite",
    "copyright": "Copyright Â© 2025 Spinfinite",
    "directories": {
      "output": "dist"
    },
    "files": [
      "!dist/",
      "!node_modules/.bin",
      "index.js",
      "main/",
      "updater/",
      "icon.ico",
      "package.json"
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "uninstallDisplayName": "Spinfinite",
      "deleteAppDataOnUninstall": true
    },
    "publish": {
      "provider": "github",
      "owner": "Spinfinite-Frontend",
      "repo": "Spinfinite-For-Windows",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "electron-log": "^5.1.4",
    "electron-updater": "^6.1.5"
  },
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "dotenv-cli": "^8.0.0"
  }
}
